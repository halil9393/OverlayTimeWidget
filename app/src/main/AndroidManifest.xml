<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.OverlayTimeWidget">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/yuvarlakarkaplan"
        android:label="@string/app_name"
        android:roundIcon="@drawable/yuvarlakarkaplan"
        android:supportsRtl="true"
        android:theme="@style/Theme.WidgetCalisiyorum2">
        <activity android:name="com.example.OverlayTimeWidget.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name="com.example.OverlayTimeWidget.WidgetService"
            android:enabled="true" />
    </application>

</manifest>